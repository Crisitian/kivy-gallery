#:kivy 1.8.0
#:import win kivy.core.window


<SideBarScreen>:
    menu: menu
    lbl: lbl
    content: content
    FloatLayout:
        id: content
    FloatLayout:
        SideBarMenu:
            id: menu
            width: lbl.x
        SideBarLabel:
            id: lbl

<SideBarMenu>:
    orientation: 'vertical'
    size_hint_x: None
    canvas.before:
        Color:
            rgba: 0.3, 0.3, 0.3, 0.8
        Rectangle:
            pos: self.pos
            size: self.size

<SideBarLabel>:
    size_hint_x: None
    width: win.Window.width * 0.04
    canvas.before:
        Color:
            rgba: 0.3, 0.3, 0.3, 1
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Rectangle:
            pos: self.pos
            size: 1, self.height

<Overview>:
    content: content
    do_scroll_y: False
    size_hint: None, None
    size: app.size
    GridLayout:
        id: content
        rows: 1
        spacing: app.width * 0.01
        size_hint_x: None
        width: self.minimum_width

<OverviewItem>:
    screenMgr: app.mgr
    size_hint_x: None
    width: app.width * 0.25
    background_down: self.background_normal
    text_size: None, self.height * 0.8
    valign: 'bottom'

<Stage>:
    content: content
    anchor_y: 'bottom'
    Carousel:
        id: content

<ExplorerItem>:
    screenMgr: app.mgr
    image: image
    on_size: self.center = win.Window.center
    size: image.size
    size_hint: None, None

    Image:
        id: image
        size: 400, 400 / self.image_ratio
        canvas.before:
            Color:
                rgba: 0.4, 0.4, 0.4, 1
            Rectangle:
                pos: (-2, -2)
                size: (root.width + 4, root.height + 4)
