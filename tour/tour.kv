#:kivy 1.8.0

<BaseScreen>:
    menu: menu
    lbl: lbl
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'center'
    FloatLayout:
        SideBarMenu:
            id: menu
            width: lbl.x
        SideBarLabel:
            id: lbl

<Overview>:
    name: 'Overview'
    Label:
        text: "Test Overview"

<Stage>:
    name: 'Stage'
    Label:
        text: "Test Stage"

<Explorer>:
    name: 'Explorer'
    Label:
        text: "Test Explorer"

<SideBarMenu>:
    orientation: 'vertical'
    size_hint_x: None
    canvas.before:
        Color:
            rgba: 0.3, 0.3, 0.3, 0.8
        Rectangle:
            pos: self.pos
            size: self.size

<SideBarLabel>:
    size_hint_x: None
    width: 40
    canvas.before:
        Color:
            rgba: 0.3, 0.3, 0.3, 1
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Rectangle:
            pos: self.pos
            size: 1, self.height



