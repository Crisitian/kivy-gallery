#:kivy 1.8.0

<SideBarScreen>:
    menu: menu
    lbl: lbl
    content: content
    FloatLayout:
        id: content
    FloatLayout:
        SideBarMenu:
            id: menu
            width: lbl.x
        SideBarLabel:
            id: lbl

<SideBarMenu>:
    orientation: 'vertical'
    size_hint_x: None
    canvas.before:
        Color:
            rgba: 0.3, 0.3, 0.3, 0.8
        Rectangle:
            pos: self.pos
            size: self.size

<SideBarLabel>:
    size_hint_x: None
    width: 40
    canvas.before:
        Color:
            rgba: 0.3, 0.3, 0.3, 1
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Rectangle:
            pos: self.pos
            size: 1, self.height



